{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",       // Compiled JS files will go to 'dist'
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
  },
  "include": ["index.ts"],    // Include your 'index.ts' file
  "exclude": ["node_modules"]
}
