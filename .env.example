# Server Configuration
PORT=8089
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/lynkup
# OR for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lynkup?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Razorpay Payment Gateway
# Get these from: https://dashboard.razorpay.com/app/website-app-settings/api-keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here

# Instagram OAuth
# Get these from: https://developers.facebook.com/apps/
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_REDIRECT_URI=https://yourapp.com/auth/instagram/callback

# Email Configuration (Mailgun)
# Get these from: https://app.mailgun.com/app/account/security/api_keys
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain.mailgun.org
MAILGUN_FROM_EMAIL=noreply@lynkup.co.in
MAILGUN_FROM_NAME=Lynkup Platform

# AWS S3 (Currently Disabled - Uncomment when ready)
# AWS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# AWS_BUCKET_NAME=lynkup-uploads
# AWS_REGION=ap-south-1

# OneSignal Push Notifications
# Get these from: https://app.onesignal.com/
ONESIGNAL_APP_ID=your_onesignal_app_id_here
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key_here

# Redis (Currently Disabled - Uncomment when ready)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_optional

# Application URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8089

# Business Rules
OFFER_LOCK_AMOUNT=20000
WITHDRAWAL_ELIGIBILITY_DAYS=30
SUBSCRIPTION_REMINDER_DAYS=7
SUBSCRIPTION_CUTOFF_DATE=2026-02-01

# Invoice Settings
INVOICE_PREFIX=LYN
GST_NUMBER=your_gst_number_here
COMPANY_NAME=Lynkup Private Limited
COMPANY_ADDRESS=Your company address here
COMPANY_PHONE=+91-XXXXXXXXXX
COMPANY_EMAIL=info@lynkup.co.in

# Cron Job Settings (cron schedule format)
SUBSCRIPTION_EXPIRY_CHECK_CRON=0 0 * * *
SUBSCRIPTION_REMINDER_CRON=0 8 * * *
OFFER_WITHDRAWAL_ELIGIBILITY_CRON=0 1 * * *
OFFER_STATUS_UPDATE_CRON=0 0 * * *

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,video/mp4

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Payment Gateway Testing Mode
RAZORPAY_TEST_MODE=true
